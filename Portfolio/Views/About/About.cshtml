@using Entities
@model List<About>
@{ ViewData["Title"] = "About";
    Layout = "~/Views/Shared/HomePageLayout.cshtml"; }



<section class="w3l-index3 bg-grey">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-6 mb-5 pr-lg-5">
                        <img src="~/images/@item.ImagePath" alt="" class="img-fluid radius-image">
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-md-5 mt-4 about-right-faq align-self">

                        <h3 class="hny-title">@item.Title</h3>
                        <p class="mt-3">
                            @item.MyAboutDescription
                        </p>

                    </div>
                }

            </div>
        </div>
    </div>
</section>

