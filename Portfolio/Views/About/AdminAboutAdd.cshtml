@model Entities.About
@{
    ViewData["Title"] = "AdminAboutAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h4 class="mb-4">Hakkımda Bilgisi Ekle</h4>
        <form method="post" action="/About/AdminAboutAdd" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Açıklama :</label><br />
                <span class="text-danger">Açıklama en az 50 karakter olmalıdır</span>
                @Html.TextAreaFor(x => x.MyAboutDescription, 5, 10, new { @class = "form-control", @id = "yazi", @required="true"})
                
                <span id="sonuc" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Başlık :</label>

                <input type="text"  name="Title" class="form-control"/>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Fotoğraf Seç</label>
                <input class="form-control bg-dark" type="file" asp-for="@Model.ImagePath" id="formFileMultiple" multiple required>
            </div>
        
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>

<script type="text/javascript" language="javascript">var yazi=document.querySelector('#yazi');
        var sonuc=document.querySelector('#sonuc');

        yazi.oninput=function(){
        var maksimum=500;
        this.value=this.value.substr(0,maksimum);
        var kalan= maksimum-this.value.length;
            sonuc.innerHTML = kalan + '/500';
    }</script>
