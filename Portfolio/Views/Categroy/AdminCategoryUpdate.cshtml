@model Entities.Category
@{
    ViewData["Title"] = "AdminCategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Kategori Güncelle</h6>
        @using (Html.BeginForm("AdminCategoryUpdate", "Categroy", FormMethod.Post))
        {
            <div class="mb-3">
                <input type="text" asp-for="@Model.Id" hidden/>
                <label for="exampleInputEmail1" class="form-label">Kategori Adı</label>
                <input type="text" asp-for="@Model.CategoryName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:red" })
            </div>
            <div class="mb-3">
               @Html.HiddenFor(x=>x.Id,new {@class="form-control readonly"})
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        }
    </div>
</div>
