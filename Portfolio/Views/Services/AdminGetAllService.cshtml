@using Entities
@model List<MyService>
@{
    ViewData["Title"] = "AdminGetAllService";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Hizmet Adı</th>
            <th>Hizmet Sembol Adı</th>
            <th><a href="/Services/AdminServiceAdd" type="button" class="btn btn-outline-info">Hizmet Ekle</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ServiceName</td>
                <td>@item.ServiceIcon</td>
                <td><a href="/Services/AdminServiceDelete/@item.Id" type="button" class="btn btn-outline-danger" style="margin-right:5px;">Sil</a> <a href="/Services/AdminServiceUpdate/@item.Id" type="button" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

